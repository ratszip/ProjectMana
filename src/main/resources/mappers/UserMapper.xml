    <select id="searchUsers" resultType="User">
        select
            user_id,
            user_type,
            username,
            password,
            user_introduce,
            register_time,
            phone,
            email,
            user_address,
            user_img
        from users
        where 1=1
        <if test="email != null and email!=''">
            email = #{email}
        </if>
        <if test="phone != null and phone!=''">
            phone = #{phone}
        </if>

    </select>
</mapper>